{% extends 'base.jinja' %}
{% block title %}Customers{% endblock %}
{% block content %}

  <a class="btn btn-primary" style="float: right" href="/add/">Add a Customer</a>

  <h1>Customers</h1>

  <ol style="column-count: 4">
    {% for customer in customers %}
      <li>
        <a href="/{{ customer.id }}/">
          {{ customer.getFullName() }}
        </a>
        <span>Number of reservations: {{ customer.reservationCount }} </span>
      </li>
    {% endfor %}
  </ol>

{% endblock %}